<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        >

        <cn.zhouzy.greatcate.common.view.CircleImageView
            android:id="@+id/civ_item_humor_layout_head_portrait"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"

            android:src="@mipmap/head_portrait"
            />

        <TextView
            android:id="@+id/tv_item_humor_layout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_30dp"
            android:layout_toRightOf="@+id/civ_item_humor_layout_head_portrait"
            android:textColor="@color/black_2c"
            android:textSize="@dimen/dimen_40dp"
            />

        <TextView
            android:id="@+id/tv_item_humor_layout_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_item_humor_layout_name"
            android:layout_below="@+id/tv_item_humor_layout_name"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textColor="@color/black_bf"
            android:textSize="@dimen/dimen_32dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_humor_layout_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:textColor="@color/black_2c"
        android:textSize="@dimen/txtsize_30sp"/>

    <cn.zhouzy.greatcate.common.view.ExpandGridViewToScrollView
        android:id="@+id/gv_item_humor_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:verticalSpacing="@dimen/dimen_20dp"></cn.zhouzy.greatcate.common.view.ExpandGridViewToScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@color/gray_bg"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_humor_like"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_60dp"
                android:src="@drawable/like_nor"
                />

            <TextView
                android:id="@+id/tv_item_humor_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:text="3"
                android:textColor="@color/black_bf"
                android:textSize="@dimen/txtsize_30sp"
                />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@color/gray_bg"
        ></View>
</LinearLayout>
