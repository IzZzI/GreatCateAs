<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg" >

    <ListView
        android:id="@+id/lv_cate_details_step"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:scrollbars="@null" >
    </ListView>

    <LinearLayout
        android:id="@+id/ll_cate_details_title_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_2c"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_104dp" >

            <Button
                android:id="@+id/btn_cate_details_back"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:background="@drawable/btn_title_back_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:layout_toEndOf="@+id/btn_cate_details_back"
                android:text="@string/cate_details"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txtsize_34sp" />

            <Button
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_30dp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cate_details_collect_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_cate_details_title_controller"
        android:layout_marginEnd="@dimen/dimen_30dp"
        android:gravity="end"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>