<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_include_display_head_view_bgimageview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_500dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_header" />

    <cn.zhouzy.greatcate.common.view.ExpandGridViewToScrollView
        android:id="@+id/gv_include_display_head_view_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_include_display_head_view_bgimageview"
        android:background="@color/white_light"
        android:listSelector="@null"
        android:numColumns="9" >
    </cn.zhouzy.greatcate.common.view.ExpandGridViewToScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_below="@+id/gv_include_display_head_view_category"
        android:background="@color/gray_bg" />

</RelativeLayout>